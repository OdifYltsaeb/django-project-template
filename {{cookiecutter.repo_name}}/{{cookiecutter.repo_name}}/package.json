    "babel-jest": "21.2.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.1.0",
    "eslint-import-resolver-webpack": "0.8.3",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.3.0",
    "jest": "21.2.1",
    "http-graceful-shutdown": "2.1.0",
    "koa-proxies": "0.6.2",
    "nodemon": "1.12.1",
    "rimraf": "2.6.2",
    "stylelint": "8.3.1",
    "stylelint-config-standard": "18.0.0",
    "webpack-dev-middleware": "2.0.6",
    "webpack-hot-middleware": "2.21.0",
    "webpack-hot-server-middleware": "0.4.0",
    "write-file-webpack-plugin": "4.2.0"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/app/src",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "NODE_ENV": "test",
      "DJ_CONST": "{}"
    },
    "verbose": true,
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "stats.json",
      "*.test.js"
    ],
    "watch": [
      "constants.json",
      "app/webpack",
      "app/src/server/middleware",
      "app/src/server/constants.js",
      "app/src/server/language.js",
      "app/src/server/listen.js",
      "app/src/server/logger.js",
      "app/src/server/server.js",
      "app/src/server/setup.js"
    ],
    "delay": "2"
  },
  "scripts": {
    "dev": "nodemon --harmony ./app/src/server/listen.js",
    "build-frontend": "cd app && NODE_ENV=production webpack -p --config webpack/config.production.js --progress --profile --color",
    "build-backend": "NODE_ENV=production ./node_modules/.bin/babel --ignore app/src/server/serverRenderer.js ./app/src -d ./app/lib; npm run update-templates",
    "update-templates": "rimraf ./app/lib/server/templates ; cp -R ./app/src/server/templates ./app/lib/server/templates",
    "build": "npm run build-frontend; npm run build-backend",
    "start": "NODE_ENV=production WORKER_COUNT=3 koa-cluster --startsecs 5 --processes 3 ./app/lib/server/index.js",
    "clean": "cd app && rm -rf build/ && rm -rf lib/",
    "predev": "npm run clean && check-engines",
    "prebuild": "npm run clean; check-engines",
    "lint": "cd app/src && eslint .",
    "stylelint": "cd static/styles-src && stylelint '**/*.scss'",
    "test": "NODE_ENV=test jest"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  }
}
