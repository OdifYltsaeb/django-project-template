# Based on Node {{ cookiecutter.node_version }} Alpine image
FROM node:{% if cookiecutter.node_version == '10' %}10.15.1{% else %}{{ cookiecutter.node_version }}{% endif %}-alpine

# Install system requirements
RUN apk add --no-cache alpine-sdk python bash

# Set the default directory where CMD will execute
WORKDIR /app

# Expose our application ports
EXPOSE 8000
EXPOSE 8001

# Set the default command to execute when creating a new container
CMD /bin/bash -c "npm install && npm run dev"
